
<div class="input-group">
    <input class="form-control" type="search" placeholder="Buscar..." autocomplete="on" />
    <span class="input-group-append">
        <Button Icon="c-icon cil-search" Type="Button.ButtonType.Button" />
    </span>
</div>
<div class="mt-2">
    <button class="btn btn-brand-gray mr-3" type="button">
        <i class="c-icon cil-filter" />
    </button>
    <button class="btn btn-icon btn-outline-brand-third" type="button">
        <i class="c-icon cil-chart-line" />
        <span>Más Populares</span>
    </button>
    <button class="btn btn-icon btn-outline-brand-third" type="button">
        <i class="c-icon cil-location-pin" />
        <span>Más Cercanos</span>
    </button>
    <button class="btn btn-icon btn-outline-brand-third" type="button">
        <i class="c-icon cil-star" />
        <span>Mejor Valorados</span>
    </button>
    <button class="btn btn-icon btn-outline-brand-third" type="button">
        <i class="c-icon cil-dollar" />
        <span>Menor Precio</span>
    </button>
    <button class="btn btn-icon btn-outline-brand-third" type="button">
        <i class="c-icon cil-clock" />
        <span>Más Recientes</span>
    </button>
</div>
<PagedList GetItemsCallback="GetItemsCallback" TItem="PromotionResource">
    <PromotionCard Promotion="@context" />
</PagedList>

@code {
    [Parameter]
    public Func<PaginationParameters, bool, Task<IEnumerable<PromotionResource>>> GetItemsCallback { get; set; }

}
